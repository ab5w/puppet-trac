# -*- coding: utf-8 -*-

[account-manager]
password_file = /etc/apache2/writeable-auth/trac
password_store = HtPasswdStore

[attachment]
max_size = 262144
render_unsafe_content = false

[browser]
downloadable_paths = /trunk, /branches/*, /tags/*
hide_properties = svk:merge

[changeset]
max_diff_bytes = 10000000
max_diff_files = 0
wiki_format_messages = true

[components]
acct_mgr.admin.accountmanageradminpage = enabled
acct_mgr.api.accountmanager = enabled
acct_mgr.htfile.htpasswdstore = enabled
acct_mgr.web_ui.accountmodule = enabled
acct_mgr.web_ui.loginmodule = enabled
acct_mgr.web_ui.registrationmodule = enabled
gitplugin.* = enabled
navadd.* = enabled
navhider.* = enabled
simpleticket.* = enabled
trac.web.auth.loginmodule = enabled
trac.wiki.web_ui.wikimodule = enabled
tracbzr.* = enabled
tracnav.* = enabled
tractags.* = enabled
webadmin.* = enabled
wikinegotiator.* = enabled
wikinotification.* = enabled

[diff]
tab_width = 8

[header_logo]
alt = <%= alt %>
height = 73
link = <%= url %>/<%= name %>
src = <%= url %>/logo.png
width = 236

[logging]
log_file = trac.log
log_level = DEBUG
log_type = none

[mimeviewer]
enscript_modes = text/x-dylan:dylan:4
enscript_path = enscript
max_preview_size = 262144
mime_map = text/x-dylan:dylan,text/x-idl:ice,text/x-ada:ads:adb
php_path = php
silvercity_modes = 
tab_width = 8

[notification]
always_notify_owner = true
always_notify_reporter = true
mime_encoding = base64
smtp_always_bcc = 
smtp_always_cc = <%= cc %>
smtp_default_domain = 
smtp_enabled = true
smtp_from = <%= from %>
smtp_password = 
smtp_port = 25
smtp_replyto = <%= replyto %>
smtp_server = <%= smtpserver %>
smtp_user = 
use_public_cc = false
use_short_addr = false
use_tls = false

[project]
descr = <%= description %>
footer = Visit the Trac open source project at<br /><a href="http://trac.edgewall.com/">http://trac.edgewall.com/</a>
icon = <%= url %>/favicon.ico
name = <%= name %>
url = <%= url %>

[search]
min_query_length = 3

[simpleticket]
hide = stage,complexity,compatibility,approval,milestone,severity,priority,specification,owner

[ticket]
default_component = library
default_milestone = 
default_priority = normal
default_severity = normal
default_version = 
restrict_owner = false

[ticket-custom]
approval = select
approval.label = State of Approval
approval.options = Unnecessary|Proposed|For|Against|Approved|Denied
approval.order = 15
approval.value = 0
compatibility = select
compatibility.label = Compatibility
compatibility.options = Unknown|Full|Limited|Breaks
compatibility.order = 30
compatibility.value = 0
complexity = select
complexity.label = Complexity
complexity.options = Unknown|Trivial|Easy|Medium|Hard
complexity.order = 25
complexity.value = 0
patch = select
patch.label = Attached Patches
patch.options = None|Code|Tests|Insufficient
patch.order = 20
patch.value = 0
specification = select
specification.label = Specification
specification.options = Unnecessary|None|Initial|Complete
specification.order = 35
specification.value = 0
stage = select
stage.label = Triage Stage
stage.options = Unreviewed|Needs more info|Needs design decision|Accepted|Ready for checkin
stage.order = 5
stage.value = 0

[ticket-workflow]
accept = new -> assigned
accept.operations = set_owner_to_self
accept.permissions = TICKET_MODIFY
leave = * -> *
leave.default = 1
leave.operations = leave_status
reassign = new,assigned,reopened -> new
reassign.operations = set_owner
reassign.permissions = TICKET_MODIFY
reopen = closed -> reopened
reopen.operations = del_resolution
reopen.permissions = TICKET_CREATE
resolve = new,assigned,reopened -> closed
resolve.operations = set_resolution
resolve.permissions = TICKET_MODIFY

[timeline]
changeset_long_messages = false
changeset_show_files = 0
default_daysback = 30
ticket_show_details = false

[trac]
authz_file = 
authz_module_name = 
base_url = <%= link %>
check_auth_ip = true
database = <%= db %>
default_charset = iso-8859-15
default_handler = WikiModule
htdocs_location = 
ignore_auth_case = false
metanav = login,logout,settings,help,about
permission_store = DefaultPermissionStore
repository_dir = <%= repo %>
repository_type = <%= repostype %>
request_filters = None
templates_dir = <%= templates %>

[wiki]
default_lang = en
ignore_missing_pages = false
split_page_names = true

